{
	"name": "student-app",
	"private": true,
	"version": "0.1.0",
	"description": "Mobile-first student learning application",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 5173",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .js,.ts,.svelte",
		"lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
		"format": "prettier --write .",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"type-check": "svelte-check --tsconfig ./tsconfig.json",
		"clean": "rm -rf .svelte-kit build dist"
	},
	"dependencies": {
		"@capacitor/core": "^6.1.2",
		"@capacitor/camera": "^6.0.2",
		"@capacitor/storage": "^1.2.5",
		"@capacitor/network": "^6.0.2",
		"@capacitor/push-notifications": "^6.0.2",
		"@capacitor-community/sqlite": "^6.1.0",
		"@capacitor-community/barcode-scanner": "^7.0.1",
		"@trpc/client": "^11.0.0",
		"@auth/sveltekit": "^1.7.0",
		"zod": "^3.23.8",
		"@educational-app/ui": "workspace:*",
		"@educational-app/types": "workspace:*",
		"@educational-app/platform": "workspace:*"
	},
	"devDependencies": {
		"@capacitor/cli": "^6.1.2",
		"@sveltejs/adapter-static": "^3.0.5",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0-beta.9",
		"@types/node": "^22.7.9",
		"@typescript-eslint/eslint-plugin": "^8.14.0",
		"@typescript-eslint/parser": "^8.14.0",
		"eslint": "^9.15.0",
		"eslint-plugin-svelte": "^2.46.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0-beta.9",
		"typescript": "^5.6.0",
		"vite": "^7.0.4",
		"vitest": "^2.1.5"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
