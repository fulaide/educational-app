{
	"name": "teacher-portal",
	"private": true,
	"version": "0.1.0",
	"description": "Teacher dashboard and class management portal",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 5174",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .js,.ts,.svelte",
		"lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
		"format": "prettier --write .",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:e2e": "playwright test",
		"type-check": "svelte-check --tsconfig ./tsconfig.json",
		"clean": "rm -rf .svelte-kit build dist"
	},
	"dependencies": {
		"@educational-app/database": "workspace:*",
		"@educational-app/i18n": "workspace:*",
		"@educational-app/media-manager": "workspace:*",
		"@educational-app/ui": "workspace:*",
		"@trpc/client": "^10.45.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@vercel/blob": "^0.23.4",
		"bcryptjs": "^2.4.3",
		"jsonwebtoken": "^9.0.2",
		"sveltekit-superforms": "^2.27.1",
		"trpc-sveltekit": "^3.6.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.0",
		"@sveltejs/adapter-vercel": "^5.4.6",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.1.12",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^22.7.9",
		"@typescript-eslint/eslint-plugin": "^8.14.0",
		"@typescript-eslint/parser": "^8.14.0",
		"eslint": "^9.15.0",
		"eslint-plugin-svelte": "^2.46.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.6.0",
		"vite": "^7.0.4",
		"vitest": "^2.1.5"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
