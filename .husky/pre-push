#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Full test suite
echo "🧪 Running full test suite..."
npm run test -- --run

# Build check
echo "🏗️ Testing build..."
npm run build

# E2E tests (if not in CI)
if [ -z "$CI" ]; then
  echo "🎭 Running E2E tests..."
  npm run test:e2e -- --reporter=dot
fi

echo "✅ Pre-push checks passed!"