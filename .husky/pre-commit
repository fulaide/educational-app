#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for staged files
npx lint-staged

# Run type checking
echo "📝 Type checking..."
npm run type-check

# Run tests for changed files
echo "🧪 Running tests..."
npm run test -- --run --reporter=basic

echo "✅ Pre-commit checks passed!"